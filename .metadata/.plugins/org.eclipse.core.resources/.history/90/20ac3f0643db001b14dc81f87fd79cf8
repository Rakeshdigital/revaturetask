package eg1;

import java.util.Arrays;

public class Demo2Arrays {

	public static void main(String[] args) {
		int ar[] = { 11, 22, 44, 22, 33, 22, 10, 44, 66 };
		
		System.out.println(ar);
		
		System.out.println("Before sort : "+Arrays.toString(ar));
		
		Arrays.sort(ar);
		
		System.out.println("After sort : "+Arrays.toString(ar));
		
		//binary search (should be sorted in ascending strictly )
		//compares from mid if it is equal to search element it will say true
		//else if smaller it will compare between 0 to mid-1
		//if larger then mid+1 to length 
		//until it either finds it or low==high
		
		System.out.println(Arrays.binarySearch(ar, 11)); //if positive element is existing if negative the element is not found
		System.out.println(Arrays.binarySearch(ar, 123));
		System.out.println(Arrays.binarySearch(ar, 22));
		
		for (int i = 0; i < ar.length; i++) {
			if(ar[i]==22) {
				System.out.println("22 found at position : "+(i+1));
			}
		}
		
		int ar1[]=Arrays.copyOf(ar, ar.length+5);
		
		System.out.println("ar1 : "+Arrays.toString(ar1));

		Arrays.fill(ar1, -1);
		System.out.println("ar1 : "+Arrays.toString(ar1));
		
		int ar2[]= {22,11,33,10};
		int ar3[]= {22,11,33,10};
		System.out.println(Arrays.equals(ar2, ar3));
		
	}

}
