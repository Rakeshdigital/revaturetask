package task2even;

public class evenupper {
	
	public static void main(String[] args) {
		
		String s="revature is there";
		StringBuilder sb=new StringBuilder();
		String ar[]=s.split(" ");
		for (int i = 0; i < ar.length; i++)
		{
			if(ar.length%2==0)
			{
				sb.append(Character.toUpperCase(ar[i].charAt(0)));
			}
		}
		
	}

}
