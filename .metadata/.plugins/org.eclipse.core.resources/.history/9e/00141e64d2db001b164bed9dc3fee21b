package eg1;

public class Demo1 {

	public static void main(String[] args) {

		int ar[] = { 11, 22, 44, 22, 33, 22, 10, 44, 66 };

		System.out.println(ar[0]);

		System.out.println("Iterating using for loop");
		for (int i = 0; i < ar.length; i++) {
			System.out.println("ar[" + i + "] : " + ar[i]);
		}

		System.out.println("Iterating using foreach loop");
		for (int x : ar) {
			System.out.println(x);
		}

		int ar1[] = new int[10];
		int n=0 ;
		System.out.println("ar1.length : " + ar1.length);
		ar1[0] = 22;
		ar1[1] = 55;
		ar1[2] = 11;
		ar1[3] = 44;
		ar1[4] = 99;
		ar1[5] = 88;
		ar1[6] = 77;
		n = 7;
		System.out.println("ar1 contents before insertion");
		for (int i = 0; i < n; i++) {
			System.out.print(+ar1[i] + " ");
		}
		int ele = 1000;
		int pos = 6;
		for (int i = n; i >= pos; i--) {
			ar1[i] = ar1[i - 1];
		}
		ar1[pos - 1] = ele;
		n++;
		System.out.println("\nar1 contents after insertion");
		for (int i = 0; i < n; i++) {
			System.out.print(+ar1[i] + " ");
		}
		pos = 5;
		for (int i = pos - 1; i < n; i++) {
			ar1[i] = ar1[i + 1];
		}
		n--;
		System.out.println("\nar1 contents after deletion");
		for (int i = 0; i < n; i++) {
			System.out.print(+ar1[i] + " ");
		}
	}

}
